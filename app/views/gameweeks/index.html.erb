<h1>Listing gameweeks</h1>

<table>
  <tr>
    <th>Gameweek</th>
    <th>Date</th>
    <th>Deadline</th>
    <th>Fixtures</th>
	<th></th>
    <th></th>
  </tr>

<% @gameweeks.each do |gameweek| %>
  <tr>
    <td><%= gameweek.number %></td>
    <td><%= gameweek.deadline.strftime("%d/%m/%Y") %></td>
	<td><%= gameweek.deadline.strftime("%H:%M") %></td>
    <td><%= gameweek.matches %></td>
	<td><%= link_to 'Show', gameweek %></td>
    <td><%= link_to 'Edit', edit_gameweek_path(gameweek) %></td>
    <td><%= link_to 'Destroy', gameweek, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Gameweek', new_gameweek_path %>
